{% extends "base.html.twig" %}

{% block content %}

    <section class="row">
        <div class="col-md-12">
            <div class="content">
                <header class="content__header">
                    <a class="backlink" href="{{ path('app_default_index') }}">Home</a>
                    <header class="content__header">
                        <h1 class="content__header-title">{{ request.reference }}</h1>
                    </header>
                </header>
            </div><!-- ./content -->
        </div><!-- ./col -->
    </section>

    <div class="row">
        
        <div class="col-md-8  col-sm-12">
        
            <div class="content-background">
            	<div class="content">
                    <h2>Uw verzoek is in behandeling</h2>
                    
                    <p>U ontvangt zo spoedig mogenlijk uitsluitsel</p>
                    
                    <a href="{{ path('app_default_index') }}">terug naar hoofdscherm</a>
                                        
                </div><!-- /.content -->
            </div><!-- /.content-background -->
        </div><!-- /.col -->

        <div class="col-md-4  col-sm-12">
            <div class="content-background">
                        
                <div class="content">
                    <h2>Uw gegevens</h2>                    
                    
    				<ul class="definition-list">
    					<li class="definition-list__item definition-list__item--horizontal">
    						<div class="definition-list__title">
    							 Voornamen
    						</div>
    						<div class="definition-list__description">
    							<p>{{ user.naam.voornamen }}</p>
    						</div>
    					</li>
    					<li class="definition-list__item definition-list__item--horizontal">
    						<div class="definition-list__title">
    							Achternaam
    						</div>
    						<div class="definition-list__description">
    							<p>{{ user.naam.geslachtsnaam }}</p> 
    						</div>
    					</li>
                        {% if user.naam.voorvoegsel is not empty%}    
    					<li class="definition-list__item definition-list__item--horizontal">
    						<div class="definition-list__title">
    							Voorvoegsel
    						</div>
    						<div class="definition-list__description">
    							<p>{{ user.naam.voorvoegsel }}</p> 
    						</div>
    					</li>
    					<li class="definition-list__item definition-list__item--horizontal">
    						<div class="definition-list__title">
    							Leeftijd
    						</div>
    						<div class="definition-list__description">
    							<p>{{ user.leeftijd }}</p> 
    						</div>
    					</li>
    					<li class="definition-list__item definition-list__item--horizontal">
    						<div class="definition-list__title">
    							Geslacht
    						</div>
    						<div class="definition-list__description">
    							<p>{{ user.geslachtsaanduiding }}</p> 
    						</div>
    					</li>
    					{% endif %}
    					<li class="definition-list__item definition-list__item--horizontal">
    						<div class="definition-list__title">
    							Addres
    						</div>
    						<div class="definition-list__description">
    							<p>{{ user.verblijfplaats.straatnaam }} {{ user.verblijfplaats.huisnummer }}{{ user.verblijfplaats.huisletter }}{{ user.verblijfplaats.huisnummertoevoeging }}
    							<br>{{ user.verblijfplaats.postcode }} {{ user.verblijfplaats.woonplaatsnaam }}</p>
    						</div>
    					</li>
    				</ul>
                </div>
            </div>
                    
            <!-- Page Break -->
            <div style="height: 20px"></div>
                
            <div class="content-background">                
                <div class="content">
                    <h2>Stappen</h2>
                 	<ul class="list list--timeline list--timeline-compact">
                		<li class="list__item">Instructie</li>
                		<li class="list__item">Gegevens verzamelen</li>
                		<li class="list__item">Ondertekening</li>
                		<li class="list__item list__item--active" >In behandeling</li>
                		<li class="list__item list__item--disabled">Uitsluitsel</li>
                	</ul>
                </div>
            </div>
            
